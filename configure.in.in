AC_INIT(acinclude.m4) dnl a source file from your sub dir
AC_CONFIG_AUX_DIR(admin)
unset CDPATH
AC_CANONICAL_SYSTEM
AC_ARG_PROGRAM
AM_INIT_AUTOMAKE(bibletime-i18n, 1.6.3b)

KDE_SET_PREFIX
KDE_USE_QT(3.0)
AC_CHECK_COMPILERS
AC_ENABLE_SHARED(no)
AC_ENABLE_STATIC(yes)
KDE_PROG_LIBTOOL
AM_MAINTAINER_MODE
AM_KDE_WITH_NLS
AC_PATH_KDE

AC_ARG_ENABLE(howto,
        AC_HELP_STRING([--enable-howto],
        [install Bible Study Howto (default=yes)]),,
        enable_howto=yes
)
HOWTODIR=""
if test "x$enable_howto"=xyes; then
        HOWTODIR="howto"
fi
AC_SUBST(HOWTODIR)

AC_CHECK_DISTRIBUTION

dnl add here all your Makefiles. They are created by configure

AC_CONFIG_FILES([ bibletime-i18n.spec ])
